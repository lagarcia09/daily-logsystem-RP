@page
@model DailyLogSystem.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center font-sans" style="background-color: #BBC863;">
    <div class="bg-[#E8FFD7]/90 p-8 rounded-2xl shadow-2xl w-full max-w-md border border-[#5E936C]">

        <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Forgot Password</h2>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="text-green-700 text-center mb-3 font-semibold">@Model.Message</p>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="text-red-600 text-center mb-3 font-semibold">@Model.ErrorMessage</p>
        }

        <form method="post" class="space-y-5">

            <div>
                <label class="block text-sm font-medium mb-1 text-gray-700">Enter your email *</label>
                <input asp-for="Email" type="email"
                       class="w-full px-3 py-2 border border-[#5E936C] rounded-lg focus:ring-2 focus:ring-[#3E5F44] focus:outline-none" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full bg-[#3E5F44] text-white py-3 rounded-lg font-semibold shadow-md hover:bg-[#2A4230] transition">
                Send Reset Link
            </button>

            <p class="text-center text-gray-700">
                <a href="/Index" class="text-[#22543d] font-semibold hover:underline">Back to Login</a>
            </p>

        </form>

    </div>
</div>
