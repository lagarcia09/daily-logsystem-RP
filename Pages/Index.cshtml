@page
@model DailyLogSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Login";
}

<script src="https://cdn.tailwindcss.com"></script>

<main class="min-h-screen flex items-center justify-center font-sans" style="background-color: #BBC863;">
    <div class="flex bg-[#E8FFD7]/90 rounded-2xl shadow-2xl overflow-hidden border border-[#5E936C] w-full max-w-5xl">

        <!-- LEFT SIDE: Login Form -->
        <div class="w-full md:w-1/2 p-10 flex flex-col justify-center">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-extrabold text-gray-800 mb-2">Daily Log System</h1>
                <p class="text-gray-600">Please log in to continue.</p>
            </div>

            <!-- Tabs -->
            <div class="flex justify-center mb-6">
                <button id="employeeTab"
                        class="w-1/2 py-2 font-semibold text-white bg-[#3E5F44] rounded-l-lg hover:bg-[#2A4230] transition">
                    Employee
                </button>
                <button id="adminTab"
                        class="w-1/2 py-2 font-semibold text-gray-800 bg-gray-200 rounded-r-lg hover:bg-gray-300 transition">
                    Admin
                </button>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-red-600 text-center mb-4">@Model.ErrorMessage</p>
            }

            <!-- ✅ Employee Login -->
            <form id="employeeForm" method="post" asp-page-handler="EmployeeLogin" class="space-y-6">
                <div>
                    <label asp-for="EmployeeInput.EmployeeId" class="block text-sm font-medium text-gray-700 mb-1">Employee ID *</label>
                    <input asp-for="EmployeeInput.EmployeeId" type="text"
                           class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44] focus:outline-none" />
                    <span asp-validation-for="EmployeeInput.EmployeeId" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="EmployeeInput.Password" class="block text-sm font-medium text-gray-700 mb-1">Password *</label>
                    <input asp-for="EmployeeInput.Password" type="password"
                           class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44] focus:outline-none" />
                    <span asp-validation-for="EmployeeInput.Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="text-center">
                    <button type="submit"
                            class="w-full bg-[#3E5F44] hover:bg-[#2A4230] text-white font-semibold py-3 rounded-lg shadow-lg transition transform hover:scale-105">
                        Login
                    </button>
                </div>

                <p class="text-center text-gray-700">
                    Don't have an account?
                    <a href="/Register" class="text-[#22543d] font-semibold hover:underline">Register Here</a>
                </p>
            </form>


            <!-- ✅ Admin Login -->
            <form id="adminForm" method="post" asp-page-handler="AdminLogin" class="hidden space-y-6">
                <div>
                    <label asp-for="AdminInput.AdminId" class="block text-sm font-medium text-gray-700 mb-1">Admin ID *</label>
                    <input asp-for="AdminInput.AdminId" type="text"
                           class="w-full px-3 py-2 border border-gray-400 rounded-md focus:ring-2 focus:ring-[#3E5F44] focus:outline-none" />
                    <span asp-validation-for="AdminInput.AdminId" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="AdminInput.Password" class="block text-sm font-medium text-gray-700 mb-1">Password *</label>
                    <input asp-for="AdminInput.Password" type="password"
                           class="w-full px-3 py-2 border border-gray-400 rounded-md focus:ring-2 focus:ring-[#3E5F44] focus:outline-none" />
                    <span asp-validation-for="AdminInput.Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="text-center">
                    <button type="submit"
                            class="w-full bg-[#5E936C] hover:bg-[#4b7857] text-white font-semibold py-3 rounded-lg shadow-md transition transform hover:scale-105">
                        Login
                    </button>
                </div>
                <p class="text-center text-gray-700">
                    Don't have an account?
                    <a href="/AdminRegister" class="text-[#22543d] font-semibold hover:underline">Register as Admin</a>
                </p>
            </form>

        </div>

        <!-- RIGHT SIDE: Design Background -->
        <div class="hidden md:flex w-3/5 relative overflow-hidden">
            <img src="/images/bg-main.gif" alt="Background Design"
                 class="absolute inset-0 w-[120%] h-full object-cover object-[100%_center] rounded-r-2xl" />
            <div class="absolute inset-0 bg-black/10"></div>
            <div class="absolute inset-0 flex flex-col justify-center items-center text-white text-center p-10 backdrop-blur-[1px] translate-x-6">
                <h2 class="text-3xl font-bold mb-3 drop-shadow-lg">Welcome!</h2>
                <p class="max-w-md text-lg drop-shadow-md">Log your daily attendance and monitor your time records with ease.</p>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const empTab = document.getElementById('employeeTab');
        const adminTab = document.getElementById('adminTab');
        const empForm = document.getElementById('employeeForm');
        const adminForm = document.getElementById('adminForm');

        empTab.addEventListener('click', () => {
            empTab.classList.add('bg-[#3E5F44]', 'text-white');
            empTab.classList.remove('bg-gray-200', 'text-gray-800');
            adminTab.classList.add('bg-gray-200', 'text-gray-800');
            adminTab.classList.remove('bg-[#3E5F44]', 'text-white');
            empForm.classList.remove('hidden');
            adminForm.classList.add('hidden');
        });

        adminTab.addEventListener('click', () => {
            adminTab.classList.add('bg-[#3E5F44]', 'text-white');
            adminTab.classList.remove('bg-gray-200', 'text-gray-800');
            empTab.classList.add('bg-gray-200', 'text-gray-800');
            empTab.classList.remove('bg-[#3E5F44]', 'text-white');
            empForm.classList.add('hidden');
            adminForm.classList.remove('hidden');
        });
    </script>
}
