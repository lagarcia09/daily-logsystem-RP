@page
@model DailyLogSystem.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            box-sizing: border-box;
        }

        .clock {
            font-family: 'Courier New', monospace;
        }

        .calendar-day {
            transition: all 0.2s ease;
        }

            .calendar-day:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body class="min-h-full" style="background-color: #5D866C;">



    <!-- nav bar -->
    <nav style="background-color: #C2A68C; border-bottom: 2px solid #E6D8C3;" class="shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">

                <!-- LEFT SIDE: PROFILE ICON + TITLE -->
                <div class="flex items-center space-x-4">
                    <!-- LEFT SIDE: PROFILE ICON + LOGO + TITLE -->
                    <div class="flex items-center space-x-4">
                        <!-- LOGO -->
                        <img src="/images/WFH DLS LOGO.png"
                             alt="System Logo"
                             class="w-24 h-24 object-contain" />

                        <!-- TITLE -->
                        <div class="text-3xl font-bold" style="color: #5D866C;">
                            Employee TimeTracker
                        </div>
                    </div>


                <!-- NAV BUTTONS -->
                <div class="flex space-x-3 items-center">

                    <!-- Dashboard -->
                    <button onclick="showSection('timetracker')"
                            class="nav-btn px-6 py-3 rounded-xl transition-all duration-300 shadow-lg font-semibold"
                            style="background-color: #5D866C; color: #F5F5F0;">
                        🏠 Dashboard
                    </button>

                    <!-- Calendar -->
                    <a href="/Calendar"
                       class="nav-btn px-6 py-3 rounded-xl transition-all duration-300 font-semibold"
                       style="background-color: #E6D8C3; color: #5D866C; border: 2px solid #C2A68C;">
                        📅 Calendar
                    </a>

                    <!-- Records -->
                    <a href="/Records"
                       class="nav-btn px-6 py-3 rounded-xl transition-all duration-300 font-semibold"
                       style="background-color: #E6D8C3; color: #5D866C; border: 2px solid #C2A68C;">
                        📊 Records
                    </a>

                    <!-- Logout -->
                    <button onclick="logoutUser()"
                            class="nav-btn px-6 py-3 rounded-xl transition-all duration-300 font-semibold"
                            style="background-color: #E6D8C3; color: #5D866C; border: 2px solid #C2A68C;">
                        🚪 Logout
                    </button>


                        <!-- PROFILE ICON BUTTON -->
                        <button onclick="openProfileModal()"
                                class="w-12 h-12 rounded-full flex items-center justify-center shadow-md transition-all duration-300"
                                style="background-color: #5D866C; color:#F5F5F0; font-size: 22px;">
                            👤
                        </button>

                </div>
            </div>
        </div>
      </div>
    </nav>




    <!-- dashboard clock & info -->
    <div id="timetracker" class="section">
        <div class="max-w-4xl mx-auto p-6">
            <div class="rounded-2xl shadow-2xl p-8 text-center" style="background-color: #F5F5F0; border: 3px solid #E6D8C3;">
                <h1 class="text-4xl font-bold mb-2" style="color: #5D866C;">Employee Time Tracker</h1>
                <p class="mb-8 text-lg" style="color: #C2A68C;">Welcome back! Track your work hours here. ✨</p>

                <div class="rounded-2xl p-8 mb-8 shadow-lg" style="background-color: #C2A68C; border: 2px solid #5D866C;">
                    <div class="clock text-5xl font-bold mb-3" style="color: #F5F5F0;" id="currentTime">Loading...</div>
                    <div class="text-xl" style="color: #E6D8C3;" id="currentDate">Loading...</div>
                </div>

                <div class="rounded-xl p-6 mb-8" style="background-color: #E6D8C3; border: 2px solid #C2A68C;">
                    <div class="text-sm" style="color: #5D866C;">
                        Employee ID:
                        <span class="font-semibold" style="color: #5D866C;">@Model.EmployeeId</span>
                    </div>
                    <div class="text-xl font-semibold mt-1" style="color: #5D866C;">@Model.FullName</div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <form method="post">
                        <button type="submit" name="action" value="TimeIn" class="font-bold py-6 px-8 rounded-2xl text-xl transition-all duration-300 transform hover:scale-105 shadow-lg" style="background-color: #C2A68C; color: #F5F5F0;">
                            🟢 TIME IN
                        </button>
                    </form>
                    <form method="post">
                        <button type="submit" name="action" value="TimeOut" class="font-bold py-6 px-8 rounded-2xl text-xl transition-all duration-300 transform hover:scale-105 shadow-lg" style="background-color: #E6D8C3; color: #5D866C;">
                            🔴 TIME OUT
                        </button>
                    </form>
                </div>

                <!-- user today status -->
                <div class="rounded-2xl p-8" style="background-color: #E6D8C3; border: 2px solid #C2A68C;">
                    <h3 class="text-xl font-semibold mb-6" style="color: #5D866C;">Today's Status</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                        <div class="rounded-xl p-6" style="background-color: #C2A68C; border: 2px solid #5D866C;">
                            <div class="text-3xl font-bold mb-2" style="color: #F5F5F0;" id="timeInDisplay">@Model.TodayRecord?.TimeIn</div>
                            <div class="text-sm" style="color: #E6D8C3;">Time In</div>
                        </div>
                        <div class="rounded-xl p-6" style="background-color: #5D866C; border: 2px solid #C2A68C;">
                            <div class="text-3xl font-bold mb-2" style="color: #F5F5F0;" id="timeOutDisplay">@Model.TodayRecord?.TimeOut</div>
                            <div class="text-sm" style="color: #E6D8C3;">Time Out</div>
                        </div>
                        <div class="rounded-xl p-6" style="background-color: #F5F5F0; border: 2px solid #E6D8C3;">
                            <div class="text-3xl font-bold mb-2" style="color: #5D866C;" id="totalHours">@Model.TodayRecord?.TotalHours</div>
                            <div class="text-sm" style="color: #C2A68C;">Total Hours</div>
                        </div>
                        <div class="rounded-xl p-6" style="background-color: #C2A68C; border: 2px solid #5D866C;">
                            <div class="text-3xl font-bold mb-2" style="color: #F5F5F0;">@Model.TodayRecord?.Status</div>
                            <div class="text-sm" style="color: #E6D8C3;">Status</div>
                        </div>
                        <div class="rounded-xl p-6" style="background-color: #5D866C; border: 2px solid #C2A68C;">
                            <div class="text-3xl font-bold mb-2" style="color: #F5F5F0;">@Model.TodayRecord?.OvertimeHours</div>
                            <div class="text-sm" style="color: #E6D8C3;">Overtime (hrs)</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <!-- PROFILE MODAL -->
    <div id="profileModal"
         class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">

        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl h-[80vh] overflow-hidden relative">

            <!-- Close button -->
            <button onclick="closeProfileModal()"
                    class="absolute top-3 right-3 text-gray-700 text-2xl font-bold hover:text-black">
                &times;
            </button>

            <!-- IFRAME showing Profile.cshtml -->
            <iframe src="/Profile"
                    class="w-full h-full border-0"></iframe>
        </div>
    </div>



    <script>
        function updateClock() {
            const now = new Date();
            document.getElementById('currentTime').textContent = now.toLocaleTimeString('en-US', { hour12: false, hour: '2-digit', minute: '2-digit', second: '2-digit' });
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
        }
        setInterval(updateClock, 1000);
        updateClock();

            
        function openProfileModal() {
            document.getElementById("profileModal").classList.remove("hidden");
        }

        function closeProfileModal() {
            document.getElementById("profileModal").classList.add("hidden");
        }
    


        function logoutUser() {
            if (confirm("Are you sure you want to logout?")) {
                window.location.href = "/Logout";
            }
        }

    </script>

</body>
</html>
