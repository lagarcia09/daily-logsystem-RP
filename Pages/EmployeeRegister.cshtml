@page
@model DailyLogSystem.Pages.EmployeeRegisterModel
@{
    ViewData["Title"] = "Employee Registration";
}

<script src="https://cdn.tailwindcss.com"></script>

<main class="min-h-screen flex items-center justify-center font-sans bg-[#BBC863]">

    <!-- LEFT SIDE FORM -->
    <div class="flex-1 flex items-center justify-center py-10 px-6">
        <div class="bg-[#E8FFD7]/95 rounded-xl shadow-xl p-8 border border-[#5E936C] w-full max-w-2xl">

            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">
                    🏠 Work-From-Home Employee Registration
                </h1>
                <p class="text-gray-600">“Complete all required information.”</p>
            </div>

            <!-- Back to Login Button -->
            <div class="mb-6">
                <a asp-page="/Index"
                   class="inline-flex items-center gap-2 px-4 py-2 bg-[#93DA97] text-[#2A4230]
              font-medium rounded-lg shadow-md hover:bg-[#7BC57D] transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 19l-7-7 7-7" />
                    </svg>
                    Back to Login
                </a>
            </div>


            <!-- FORM START -->
            <form method="post" novalidate class="space-y-8" id="registerForm">

                <!-- PERSONAL INFO -->
                <div class="bg-[#93DA97] rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-[#3E5F44]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                  clip-rule="evenodd"></path>
                        </svg>
                        Personal Information
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
                            <input asp-for="Input.FullName" class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.FullName" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                            <input asp-for="Input.Email" type="email"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Input.ContactNumber" class="block text-sm font-medium text-gray-700 mb-1">Contact Number *</label>
                            <input asp-for="Input.ContactNumber" class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.ContactNumber" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="md:col-span-2">
                            <label asp-for="Input.Address" class="block text-sm font-medium text-gray-700 mb-1">Address *</label>
                            <input asp-for="Input.Address" class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.Address" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- EMPLOYMENT -->
                <div class="bg-[#93DA97] rounded-lg p-6 mt-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-[#3E5F44]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z"
                                  clip-rule="evenodd"></path>
                        </svg>
                        Employment Details
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                        <div>
                            <label asp-for="Input.Department" class="block text-sm font-medium text-gray-700 mb-1">Department *</label>
                            <select asp-for="Input.Department"
                                    class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]">
                                <option value="">Select Department</option>
                                <option>IT Department</option>
                                <option>HR Department</option>
                                <option>Finance Department</option>
                                <option>Marketing Department</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="Input.Position" class="block text-sm font-medium text-gray-700 mb-1">Position *</label>
                            <select asp-for="Input.Position"
                                    class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]">
                                <option value="">Select Position</option>
                                <option>Manager</option>
                                <option>Developer</option>
                                <option>Analyst</option>
                                <option>Assistant</option>
                            </select>
                        </div>

                        <div class="md:col-span-2">
                            <label asp-for="Input.WorkSchedule" class="block text-sm font-medium text-gray-700 mb-1">Work Schedule *</label>
                            <select asp-for="Input.WorkSchedule"
                                    class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]">
                                <option value="">Select Schedule</option>
                                <option>8:00 AM – 5:00 PM</option>
                                <option>9:00 AM – 6:00 PM</option>
                                <option>10:00 AM – 7:00 PM</option>
                            </select>
                        </div>

                        <!-- PASSWORD -->
                        <div class="md:col-span-1 relative">
                            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Password *</label>

                            <!-- parent must be relative so absolute button positions correctly -->
                            <div class="relative">
                                <input id="passwordInput" asp-for="Input.Password" type="password"
                                       class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />

                                <button type="button" id="toggleShowBoth"
                                        aria-pressed="false"
                                        class="absolute right-2 top-1/2 transform -translate-y-1/2 text-xs px-2 py-1 bg-gray-100 border rounded shadow-sm hover:bg-gray-200 z-50">
                                    Show 
                                </button>
                            </div>

                            <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- CONFIRM PASSWORD -->
                        <div class="md:col-span-1 relative">
                            <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password *</label>

                            <input id="confirmPassword" name="confirmPassword" type="password"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />

                            <span id="confirmError" class="text-red-600 text-sm hidden">Passwords do not match.</span>
                        </div>

                        <!-- SUBMIT -->
                        <div class="md:col-span-2 text-center mt-6">
                            <button type="submit"
                                    class="bg-[#3E5F44] hover:bg-[#2A4230] text-white font-semibold py-3 px-8 rounded-lg transition duration-200 transform hover:scale-105 shadow-lg">
                                Register
                            </button>
                        </div>

                    </div> <!-- closes Employment grid -->
                </div> <!-- closes Employment container -->

            </form> <!-- closes form -->
            <!-- FORM END -->

        </div>
    </div>

    <!-- RIGHT SIDE IMAGE -->
    <div class="hidden md:block w-1/2 relative">
        <img src="/images/bg-main.gif"
             class="absolute inset-0 w-full h-full object-cover object-right" />

        <div class="absolute inset-0 flex flex-col justify-center items-center text-white text-center p-8 space-y-6">
            <img src="/images/reg-bg.png"
                 class="w-[450px] md:w-[550px] lg:w-[650px] mb-4 drop-shadow-2xl">
            <h2 class="text-4xl font-extrabold mb-2 drop-shadow-lg">Welcome Back!</h2>
            <p class="max-w-lg text-lg md:text-xl font-medium leading-relaxed drop-shadow-md">
                Log your daily attendance and monitor your time records with ease.
            </p>
        </div>
    </div>

</main>

<!-- SCRIPT: placed after markup so elements exist -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const pwd = document.getElementById("passwordInput");
            const confirmPwd = document.getElementById("confirmPassword");
            const toggleBoth = document.getElementById("toggleShowBoth");
            const confirmError = document.getElementById("confirmError");

            if (!pwd || !confirmPwd || !toggleBoth) return;

            toggleBoth.addEventListener("click", (e) => {
                e.preventDefault();
                const currentlyHidden = pwd.type === "password" && confirmPwd.type === "password";
                const newType = currentlyHidden ? "text" : "password";

                pwd.type = newType;
                confirmPwd.type = newType;

                toggleBoth.textContent = newType === "password" ? "Show" : "Hide";
            });

            function validateMatch() {
                if (!pwd.value && !confirmPwd.value) {
                    confirmError.classList.add("hidden");
                    return;
                }
                if (pwd.value === confirmPwd.value) {
                    confirmError.classList.add("hidden");
                } else {
                    confirmError.classList.remove("hidden");
                }
            }

            pwd.addEventListener("input", validateMatch);
            confirmPwd.addEventListener("input", validateMatch);
        });
    </script>
}
    
