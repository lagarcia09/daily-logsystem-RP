@page
@model DailyLogSystem.Pages.RecordsModel
@{
    ViewData["Title"] = "Records";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body style="background-color:#5D866C;">

    
    <nav style="background-color: #C2A68C; border-bottom: 2px solid #E6D8C3;" class="shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="text-3xl font-bold" style="color: #5D866C;">
                    Employee TimeTracker
                </div>

                <div class="flex space-x-2">
                    <a href="/Dashboard"
                       class="px-6 py-3 rounded-xl font-semibold"
                       style="background-color:#E6D8C3; color:#5D866C; border:2px solid #C2A68C">
                        🏠 Dashboard
                    </a>

                    <a href="/Calendar"
                       class="px-6 py-3 rounded-xl font-semibold"
                       style="background-color:#E6D8C3; color:#5D866C; border:2px solid #C2A68C">
                        📅 Calendar
                    </a>

                    <span class="px-6 py-3 rounded-xl font-semibold"
                          style="background-color:#5D866C; color:#F5F5F0; border:2px solid #C2A68C">
                        📊 Records
                    </span>

                    <button onclick="logoutUser()" class="nav-btn px-6 py-3 rounded-xl transition-all duration-300 font-semibold"
                            style="background-color: #E6D8C3; color: #5D866C; border: 2px solid #C2A68C;">
                        🚪 Logout
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- records infos -->
    <div class="max-w-6xl mx-auto p-6">

       
        <div class="rounded-2xl p-8 mb-8"
             style="background-color:#F5F5F0; border:3px solid #E6D8C3;">
            <h1 class="text-3xl font-bold mb-4" style="color:#5D866C;">
                Monthly Attendance Summary
            </h1>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-6 text-center">
                <div class="p-5 rounded-xl" style="background:#C2A68C;">
                    <div class="text-3xl font-bold text-white">@Model.TotalWorkedDays</div>
                    <div class="text-sm text-white">Worked Days</div>
                </div>

                <div class="p-5 rounded-xl" style="background:#5D866C;">
                    <div class="text-3xl font-bold text-white">@Model.TotalHoursThisMonth</div>
                    <div class="text-sm text-white">Total Hours</div>
                </div>

                <div class="p-5 rounded-xl" style="background:#C2A68C;">
                    <div class="text-3xl font-bold text-white">@Model.OvertimeThisMonth</div>
                    <div class="text-sm text-white">Overtime</div>
                </div>

                <div class="p-5 rounded-xl" style="background:#5D866C;">
                    <div class="text-3xl font-bold text-white">@Model.UndertimeThisMonth</div>
                    <div class="text-sm text-white">Undertime</div>
                </div>

                <div class="p-5 rounded-xl" style="background:#C2A68C;">
                    <div class="text-3xl font-bold text-white">@Model.AbsencesThisMonth</div>
                    <div class="text-sm text-white">Absences</div>
                </div>

                <div class="p-5 rounded-xl" style="background:#5D866C;">
                    <div class="text-3xl font-bold text-white">@Model.AttendanceRate %</div>
                    <div class="text-sm text-white">Attendance Rate</div>
                </div>
            </div>

            <form method="post" asp-page-handler="ExportPDF" class="mt-6">
                <button type="submit" class="px-6 py-3 rounded-xl font-semibold shadow-lg" style="background:#5D866C; color:white;">
                     Export Monthly Report (PDF)
                </button>
            </form>

            <!-- chart -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
                <div class="bg-white rounded-xl shadow p-4">
                    <canvas id="attendancePie" width="200" height="200"></canvas>
                </div>
                <div class="bg-white rounded-xl shadow p-4">
                    <canvas id="hoursPie" width="200" height="200"></canvas>
                </div>
            </div>
        </div>

      
        <div class="rounded-2xl p-8"
             style="background-color:#F5F5F0; border:3px solid #E6D8C3;">
            <h2 class="text-2xl font-bold mb-4" style="color:#5D866C;">Daily Attendance</h2>

            <table class="w-full text-left">
                <thead>
                    <tr class="border-b">
                        <th class="pb-3">Date</th>
                        <th class="pb-3">Time In</th>
                        <th class="pb-3">Time Out</th>
                        <th class="pb-3">Hours</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var log in Model.Logs)
                    {
                        <tr class="border-b">
                            <td>@log.Date.ToString("MMM dd, yyyy")</td>
                            <td>@(log.TimeIn?.ToString("hh:mm tt") ?? "-")</td>
                            <td>@(log.TimeOut?.ToString("hh:mm tt") ?? "-")</td>
                            <td>@log.TotalHours</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <script>
        const attendanceJson = '@(Model.PunctualityJson ?? "{}")'.replace(/&quot;/g, '"');
        const hoursJson = '@(Model.WorkHoursJson ?? "{}")'.replace(/&quot;/g, '"');

        const attendanceData = JSON.parse(attendanceJson);
        const hoursData = JSON.parse(hoursJson);

        new Chart(document.getElementById("attendancePie"), {
            type: "pie",
            data: attendanceData,
            options: {
                plugins: {
                    legend: {
                        display: true,
                        labels: {
                            color: "#5D866C",
                            font: { size: 14 }
                        }
                    }
                }
            }
        });

        new Chart(document.getElementById("hoursPie"), {
            type: "pie",
            data: hoursData,
            options: {
                plugins: {
                    legend: {
                        display: true,
                        labels: {
                            color: "#5D866C",
                            font: { size: 14 }
                        }
                    }
                }
            }
        });
             function logoutUser() {
            if (confirm("Are you sure you want to logout?")) {
                window.location.href = "/Logout";
            }
        }
    </script>

</body>
</html>
