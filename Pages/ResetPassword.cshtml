@page "{token?}"
@model DailyLogSystem.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center" style="background-color: #BBC863;">
    <div class="bg-[#E8FFD7]/90 p-8 rounded-2xl shadow-2xl w-full max-w-md border border-[#5E936C]">

        <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Reset Password</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="text-red-600 text-center mb-3 font-semibold">@Model.ErrorMessage</p>
        }

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="text-green-700 text-center mb-3 font-semibold">@Model.Message</p>
        }

        <form method="post" class="space-y-5">

            <div class="relative">
                <label class="block text-sm text-gray-700 font-medium mb-1">New Password *</label>
                <input id="newPassword" asp-for="NewPassword" type="password"
                       class="w-full px-3 py-2 border border-[#5E936C] rounded-lg focus:ring-2 focus:ring-[#3E5F44]" />
                <button type="button" id="togglePassword"
                        class="absolute right-2 top-[65%] transform -translate-y-1/2 px-2 py-1 text-xs bg-gray-100 border rounded shadow-sm hover:bg-gray-200">
                    Show
                </button>
            </div>


            <div class="relative">
                <label class="block text-sm text-gray-700 font-medium mb-1">Confirm Password *</label>
                <input id="confirmPassword" asp-for="ConfirmPassword" type="password"
                       class="w-full px-3 py-2 border border-[#5E936C] rounded-lg focus:ring-2 focus:ring-[#3E5F44]" />
            </div>

            <button type="submit"
                    class="w-full bg-[#3E5F44] text-white py-3 rounded-lg font-semibold shadow-md hover:bg-[#2A4230]">
                Reset Password
            </button>
        </form>

        <!-- Back to Login Button -->
        <div class="mt-4 text-center">
            <a href="/Index"
               class="inline-block px-4 py-2 bg-gray-200 text-gray-800 font-semibold rounded-lg hover:bg-gray-300 transition">
                Back to Login
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        const toggleBtn = document.getElementById("togglePassword");
        const newPwd = document.getElementById("newPassword");
        const confirmPwd = document.getElementById("confirmPassword");

        toggleBtn.addEventListener("click", () => {
            const type = newPwd.type === "password" ? "text" : "password";
            newPwd.type = type;
            confirmPwd.type = type;
            toggleBtn.textContent = type === "password" ? "Show" : "Hide";
        });
    </script>
}
