@page
@model DailyLogSystem.Pages.AdminRegisterModel
@{
    ViewData["Title"] = "Admin Registration";
}

<script src="https://cdn.tailwindcss.com"></script>

<main class="min-h-screen flex items-center justify-center font-sans bg-[#BBC863]">
    <!-- ✅ Left Side: Admin Registration Form -->
    <div class="flex-1 flex items-center justify-center py-10 px-6">
        <div class="bg-[#E8FFD7]/95 rounded-xl shadow-xl p-8 border border-[#5E936C] w-full max-w-2xl">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-800 mb-2">🛡️ Admin Registration Portal</h1>
                <p class="text-gray-600">“Please fill in all required admin information.”</p>
            </div>

            <!-- ✅ FORM -->
            @* ✅ Always use <form asp-page-handler> or <form method="post"> with full closing *@
            <form method="post" novalidate class="space-y-8" id="adminRegisterForm">
                <div class="bg-[#93DA97] rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-[#3E5F44]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                  clip-rule="evenodd"></path>
                        </svg>
                        Admin Information
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
                            <input asp-for="Input.FullName"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.FullName" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                            <input asp-for="Input.Email" type="email"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Input.ContactNumber" class="block text-sm font-medium text-gray-700 mb-1">Contact Number *</label>
                            <input asp-for="Input.ContactNumber"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <span asp-validation-for="Input.ContactNumber" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="md:col-span-1 relative">
                            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Password *</label>
                            <input id="passwordInput" asp-for="Input.Password" type="password"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                            <button type="button" id="togglePassword"
                                    class="absolute right-3 top-9 text-gray-600 hover:text-gray-900">
                                Show
                            </button>
                            <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="md:col-span-1 relative">
                            <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password *</label>
                            <input id="confirmPassword" name="confirmPassword" type="password"
                                   class="w-full px-3 py-2 border border-[#5E936C] rounded-md focus:ring-2 focus:ring-[#3E5F44]" />
                             
                            <span id="confirmError" class="text-red-600 text-sm hidden">Passwords do not match.</span>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit"
                            class="bg-[#2d6a4f] text-white px-6 py-2 rounded-lg hover:bg-[#22543d] transition font-semibold">
                        Register Admin
                    </button>
                </div>
            </form>
            <!-- ✅ FORM CLOSED -->
        </div>
    </div>

    <!-- ✅ Right Side: Image Section -->
    <div class="hidden md:block w-1/2 relative">
        <img src="/images/bg-main.gif" alt="Background Design"
             class="absolute inset-0 w-full h-full object-cover object-right" />

        <div class="absolute inset-0 flex flex-col justify-center items-center text-white text-center p-8 space-y-6">
            <img src="/images/admin-bg.png" alt="Admin Registration Background"
                 class="w-[450px] md:w-[550px] lg:w-[650px] mb-4 drop-shadow-2xl">

            <h2 class="text-4xl font-extrabold mb-2 drop-shadow-lg">Welcome, Admin!</h2>
            <p class="max-w-lg text-lg md:text-xl font-medium leading-relaxed drop-shadow-md">
                Manage employee records, attendance, and performance — all in one place.
            </p>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const togglePassword = document.getElementById("togglePassword");
            const passwordInput = document.getElementById("passwordInput");

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener("click", () => {
                    const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
                    passwordInput.setAttribute("type", type);
                    togglePassword.textContent = type === "password" ? "Show" : "Hide";
                });
            }

            if (togglePassword && confirmPassword) {
                togglePassword.addEventListener("click", () => {
                    const type = confirmPassword.getAttribute("type") === "password" ? "text" : "password";
                    confirmPassword.setAttribute("type", type);
                    togglePassword.textContent = type === "password" ? "Show" : "Hide";
                });
            }
        });
    </script>
}
